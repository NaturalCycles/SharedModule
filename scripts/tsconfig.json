//
// tsconfig.json for /scripts
//
{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "sourceMap": false,
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["../src/*"],
      "@linked/*": ["../src/@linked/*"]
    }
  },
  "exclude": ["**/__exclude"]
}
